<div class="container py-6 mx-auto grid grid-cols-4 gap-4">
  <% @sites.each do |site| %>
    <div class="overflow-hidden bg-white rounded-md shadow-lg">
      <div class="relative">
        <%= link_to site_path(site) do %>
          <div class="text-gray-700 h-[15rem]">
            <% if site.images.present? %>
              <img class="w-full h-full object-cover" src="<%= site.images.first.url %>" alt="Restaurant Pic">
            <% else %>
              <%= image_tag "https://fakeimg.pl/350x200/?text=TourMind", class:'object-cover w-full h-full' %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="m-2">
        <div class="flex items-start justify-between">
          <h2 class="text-xl font-medium">
           <%= site.name %>
          </h2>
        </div>
        <ul>
          <li class="mt-2"><%= site.intro&.truncate(70) %></li>
        </ul>
        <div class="flex mt-2">
          <ul class="flex flex-wrap mt-2">
          </ul>
        </div>
        <div class="mt-2">
          <% if site.site_types.present? %>
          <ul class="flex flex-wrap mt-2">
            <% site.site_types.each do |site_type| %>
            <li class='inline-block px-3 py-1 mb-2 mr-1 text-sm font-semibold text-gray-700 bg-gray-200 rounded-full'>
              <%= site_type %>
            </li>
            <% end %>
          </ul>
          <% else %>
            <p>沒有類型資料</p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>