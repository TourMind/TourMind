<div class="container py-6 mx-auto grid grid-cols-4 gap-4">
  <% @hotels.each do |hotel| %>
    <div class="overflow-hidden bg-white rounded-md shadow-lg">
      <div class="relative">
        <%= link_to hotel_path(hotel) do %>
          <div class="text-gray-700 h-[15rem]">
            <% if hotel.images.present? %>
              <img class="w-full h-full object-cover" src="<%= hotel.images.first.url %>" alt="Restaurant Pic">
            <% else %>
              <%= image_tag "https://fakeimg.pl/350x200/?text=TourMind", class:'object-cover w-full h-full' %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="m-2">
        <div class="flex items-start justify-between">
          <h2 class="text-xl font-medium">
           <%= hotel.name %>
          </h2>
        </div>
        <ul>
          <li class="mt-2"><%= hotel.intro&.truncate(70) %></li>
        </ul>
        <div class="flex mt-2">
          <ul class="flex flex-wrap mt-2">
          </ul>
        </div>
        <div class="mt-2">
          <% if hotel.equipment.present? %>
          <ul class="flex flex-wrap mt-2">
            <% hotel.equipment.each do |equipment| %>
              <li class='inline-block px-3 py-1 mb-2 mr-1 text-sm font-semibold text-gray-700 bg-gray-200 rounded-full'>
                <%= equipment.truncate(5) %>
              </li>
            <% end %>
          </ul>
          <% else %>
            <p>沒有類型資料</p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>