<div id="restaurants" class="min-w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 flex">
  <% favorite_restaurants.each do |fav| %>
    <div class=" rounded overflow-hidden shadow-lg relative">
      <div>
        <%= link_to 'X', favorite_path(fav), method: :delete, class: "rounded-lg py-1 px-3 bg-gray-200 inline-block font-medium ms-auto absolute top-1 start-1", data: {confirm: "確定要移出喜愛清單?"}%>
      </div>
      <div class="aspect-[5/3]">
        <%= link_to fav.favorable do %>
          <img class="h-full w-full" src=<%=fav.favorable.image%> alt="fav.favorable iamge">
        <% end %>
        <h2 class="font-bold text-xl mb-2"><%=fav.favorable.name%></h2>
      </div>
    </div>
  <% end %>
</div>