<div class="min-w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-4 flex px-6">
  <% favorite_objects.each do |fav| %>
    <!-- component -->
    <div class="flex h-full items-center justify-center">
      <div class="w-full overflow-hidden rounded-xl bg-white shadow-md duration-200 hover:scale-105 hover:shadow-xl relative">
        <div>
          <%= link_to 'ｘ', favorite_path(fav), method: :delete, class: "rounded-lg px-1 bg-gray-200 inline-block font-medium ms-auto absolute top-1 end-1", data: {confirm: "確定要移出喜愛清單?"}%>
        <p class="text-sm font-medium uppercase bg-gray-100 rounded-lg py-1 px-3 tracking-widest absolute top-2 start-2">
          <%=fav.favorable.class%>
        </p>
        </div>
        <div class= "aspect-[5/3]">
          <img class="h-full w-full" src=<%=fav.favorable.image%> alt='<%=fav.favorable.class%> image'>
        </div>
        <div class="p-5">
          <div class="flex justify-between">
            <p class="text-largue mb-5 text-gray-700"><%= fav.favorable.name%></p>
            <% if fav.favorable.price?%>
              <p class="text-medium mb-5 text-gray-700">均消: $<%= fav.favorable.price.to_i%></p>
            <% end %>
          </div>
          <%= link_to fav.favorable do %>
          <button class="w-full rounded-md bg-indigo-600 py-2 text-indigo-100 hover:bg-indigo-500 hover:shadow-md duration-75">詳細資訊</button>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
