<%= turbo_frame_tag "plan_nav" do %>
  <section class="my-3 mx-3" data-controller="map">
    <h1 class="mt-8 text-3xl font-medium mb-5">行程</h1>
    <nav class="flex flex-col sm:flex-row">
      <button class="py-4 px-6 block focus:outline-none text-gray-600  cursor-default">
        <%= link_to "概覽","/plan_overview?id=#{@plan.id}", class: "hover:text-blue-500" %>
      </button>
      <% @plan.days.times do |i| %>
        <button class="py-4 px-6 block focus:outline-none <%= @day == i + 1 ? "text-blue-500 border-b-2 font-medium border-blue-500" : "text-gray-600" %> cursor-default">
          <%= link_to "第 #{i + 1} 天","/day_info?id=#{@plan.id}&day=#{i + 1}", class: "hover:text-blue-500" %>
        </button>
      <% end %>
    </nav>
    <div>
      <% if @plan.locations != nil %>
        <div class="flex bg-white rounded-lg shadow-xl p-8 gap-3 w-full justify-between">
          <div class="relative px-4 w-48 min-h-[150px]" data-map-target="day">
            <h4 class="text-xl text-gray-900 font-bold">第 <%= @day %> 天</h4>
            <div class="absolute h-full border border-dashed border-opacity-20 border-slate-600"></div>
            <% @plan.locations["day#{@day}"].each do |site| %>
              <!-- start::Timeline item -->
              <div class="flex items-center w-full my-6 -ml-1.5 site" data-lat="<%= site["lat"] %>" data-lng="<%= site["lng"] %>" >
                <div class="w-1/12 z-10">
                  <div class="w-3.5 h-3.5 bg-blue-600 rounded-full"></div>
                </div>
                <div class="w-11/12 ml-2">
                  <p class="text-sm">
                    <%= site["type"] %>
                    <a href="#" class="text-blue-600 font-bold"><%= site["name"] %></a>
                  </p>
                  <p class="text-xs text-gray-500">停留時間：<%= site["stay_time"] %> mins</p>
                </div>
              </div>
              <!-- end::Timeline item -->
            <% end %>
          </div>
          <div class="h-96 w-2/3" data-map-target="map"></div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<% end %>
