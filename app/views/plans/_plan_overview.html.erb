<%= turbo_frame_tag "plan_nav" do %>
  <section class="my-3 mx-3">
    <h1 class="mt-8 text-3xl font-medium mb-5">行程</h1>
    <nav class="flex flex-col sm:flex-row">
      <button class="py-4 px-6 block focus:outline-none text-blue-500 border-blue-500 border-b-2 font-medium cursor-default">
        <%= link_to "概覽","/plan_overview?id=#{@plan.id}", class: "hover:text-blue-500" %>
      </button>
      <% @plan.days.times do |i| %>
        <button class="text-gray-600 py-4 px-6 block focus:outline-none cursor-default">
          <%= link_to "第 #{i + 1} 天","/day_info?id=#{@plan.id}&day=#{i + 1}", class: "hover:text-blue-500" %>
        </button>
      <% end %>
    </nav>
    <div>
      <% if @plan.locations != nil %>
        <div class="flex bg-white rounded-lg shadow-xl p-8 gap-3 flex-wrap h-96">
          <% @plan.locations.each_key.with_index do |key, i| %>
            <div class="relative px-4">
              <h4 class="text-xl text-gray-900 font-bold">第<%= i + 1 %>天</h4>
              <div
          class="absolute h-full border border-dashed border-opacity-20 border-secondary"
        ></div>
              <% @plan.locations[key].each do |site| %>
                <!-- start::Timeline item -->
                <div class="flex items-center w-full my-6 -ml-1.5">
                  <div class="w-1/12 z-10">
                    <div class="w-3.5 h-3.5 bg-blue-600 rounded-full"></div>
                  </div>
                  <div class="w-11/12 ml-2">
                    <p class="text-sm">
                      <%= site["type"] %>
                      <a href="#" class="text-blue-600 font-bold"><%= site["name"] %></a>
                    </p>
                    <p class="text-xs text-gray-500">停留時間：<%= site["stay_time"] %> mins</p>
                  </div>
                </div>
                <!-- end::Timeline item -->
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>
<% end %>
