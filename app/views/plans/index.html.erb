<main class="container mx-auto mt-10">
  <% if user_signed_in? %>
    <section>
      <%= link_to new_plan_path do %>
        <div class="bg-rose-400 inline-block text-white focus:outline-none focus:ring-4 rounded-full text-md px-3 mb-5 py-1 hover:bg-white hover:text-red-500 border-2 transition-all duration-400">
          <span class="inline-block text-rose-500">&#x2665;</span>
          <span>新增我的專屬行程</span>
        </div>
      <% end %>
    </section>
    <% if current_user.shared_plans.any? %>
      <section>
        <div class="border-b-2  border-slate-300 mb-12 pb-12">
          <h1 class="text-xl font-bold pl-3">共同編輯</h1>
          <div class="overflow-x-auto">
            <div class="flex gap-5 py-5 w-max">
              <% current_user.shared_plans.each_with_index do |plan, i| %>
                <div class="w-48 ml-3 overflow-hidden rounded-xl bg-white shadow-md duration-200 hover:scale-105 hover:shadow-xl flex flex-col">
                  <%= link_to plan_path(plan.id), class: "inline-block" do %>
                    <img src="<%= plan.images.present? ? plan.images[0].url :  (i == 0 ? "https://chenka.s3.amazonaws.com/uploads/plan/images/16/%E6%88%AA%E5%9C%96_2023-05-18_%E4%B8%8A%E5%8D%8811.26.54.png" : "https://fakeimg.pl/350x200/?text=TourMind")  %>"  alt="plant" class="w-full h-28 object-cover" />
                  <% end %>
                  <div class="flex flex-col gap-5 p-5 h-full justify-between">
                    <div class="font-bold"><%= plan.name %></div>
                    <div>
                      <div class="flex items-center my-3">
                        <span><%= star_rating(@plan_data[plan.id][:average_rating]) %></span>
                        <span>(<%= @plan_data[plan.id][:comment_count] %>)</span>
                      </div>
                      <div class="mb-5 text-xs text-slate-500">為期<%= plan.days %>天的行程 </div>
                      <%= link_to plan_path(plan.id), class: "inline-block" do %>
                        <button class="inline-block px-3 pb-1 text-indigo-100 duration-75 bg-indigo-600 rounded-md w-fit hover:bg-indigo-500 hover:shadow-md"><span class="text-xs">詳細資訊</span></button>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </section>
    <% end %>
    <section>
      <div class="border-b-2  border-slate-300 mb-12 pb-12">
        <h1 class="text-xl font-bold pl-3">我的行程</h1>
        <div class="overflow-x-auto">
          <div class="flex gap-5 py-5 w-max">
            <% if current_user.plans.any? %>
              <% current_user.plans.order(id: :desc).each do |plan| %>
                <div class="w-48 ml-3 overflow-hidden rounded-xl bg-white shadow-md duration-200 hover:scale-105 hover:shadow-xl flex flex-col">
                  <%= link_to plan_path(plan.id), class: "inline-block" do %>
                    <img src="<%= plan.images.present? ? plan.images[0].url : "https://fakeimg.pl/350x200/?text=TourMind" %>" alt="plant" class="w-full h-28 object-cover"/>
                  <% end %>
                  <div class="flex flex-col gap-5 p-5 h-full justify-between">
                    <div class="font-bold"><%= plan.name %></div>
                    <div>
                      <div class="flex items-center my-3">
                        <span><%= star_rating(@plan_data[plan.id][:average_rating]) %></span>
                        <span>(<%= @plan_data[plan.id][:comment_count] %>)</span>
                      </div>
                      <div class="mb-5 text-xs text-slate-500">為期<%= plan.days %>天的行程 </div>
                      <%= link_to plan_path(plan.id), class: "inline-block" do %>
                        <button class="inline-block px-3 pb-1 text-indigo-100 duration-75 bg-indigo-600 rounded-md w-fit hover:bg-indigo-500 hover:shadow-md"><span class="text-xs">詳細資訊</span></button>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <h1>你還沒有屬於自己的行程規劃唷！</h1>
            <% end %>
          </div>
        </div>
      </div>
    </section>
  <% end %>
  <% Plan.category_options.each do |category| %>
    <% next if @plans.select {|plan| plan.category == category } == [] %>
    <section>
      <div class="pb-12 mb-12 border-b-2 border-slate-300">
        <h1 class="text-xl font-bold pl-3"><%= category %>之旅</h1>
        <div class="overflow-x-auto">
          <div class="flex gap-5 py-5 w-max">
            <% @plans.select {|plan| plan.category == category }.each do |plan| %>
              <div class="w-48 ml-3 overflow-hidden rounded-xl bg-white shadow-md duration-200 hover:scale-105 hover:shadow-xl flex flex-col">
                <%= link_to plan_path(plan.id), class: "inline-block" do %>
                  <img src="<%= plan.images.present? ? plan.images[0].url : "https://fakeimg.pl/350x200/?text=TourMind" %>" alt="plant" class="w-full h-28 object-cover"/>
                <% end %>
                <div class="flex flex-col gap-5 p-5 h-full justify-between">
                  <div class="font-bold"><%= plan.name %></div>
                  <div>
                    <div class="flex items-center my-3">
                      <span class=""><%= star_rating(@plan_data[plan.id][:average_rating]) %></span>
                      <span class="">(<%= @plan_data[plan.id][:comment_count] %>)</span>
                    </div>
                    <div class="mb-5 text-xs text-slate-500">為期<%= plan.days %>天的行程 </div>
                    <%= link_to plan_path(plan.id), class: "inline-block" do %>
                      <button class="inline-block px-3 pb-1 text-indigo-100 duration-75 bg-indigo-600 rounded-md w-fit hover:bg-indigo-500 hover:shadow-md"><span class="text-xs">詳細資訊</span></button>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>
  <% end %>
</main>
