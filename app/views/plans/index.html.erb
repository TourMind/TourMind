<main>
  <section>
    <div class="flex m-2 space-x-2 p-10">
      <div class="w-1/3 ">
        <div class="bg-white rounded-md shadow-md p-2">
          <h2 class="text-xl  font-semibold mb-2"><%= link_to '住宿', '#' %>
          </h2>
        </div>
      </div>
      <div class="w-1/3">
        <div class="bg-white rounded-md shadow-md p-2">
          <h2 class="text-xl font-semibold mb-2"><%= link_to '景點', '#' %>
          </h2>
        </div>
      </div>
      <div class="w-1/3">
        <div class="bg-white rounded-md shadow-md p-2">
          <h2 class="text-xl font-semibold mb-2">餐廳</h2>
        </div>
      </div>
    </div>
  </section>
  <section class=" px-12 py-4">
    <h1 class="text-xl font-bold">自然行程</h1>
    <div class=" px-12 py-6 relative bg-white rounded-lg " style="height:auto" data-controller="moving">
      <button data-action="click->moving#prevSlide" class="absolute top-1/2 transform -translate-y-1/2 left-0 rounded-full bg-gray-200 w-6 h-6"><span><</span>
          </button>
          <div class="flex gap-3">
            <% @plans.each do |plan| %>
              <div class="max-w-xs overflow-hidden rounded-xl bg-white shadow-md duration-200 hover:scale-105 hover:shadow-xl">
                <img src="https://i.imgur.com/5dmBrx6.jpg" alt="plant" class="h-auto w-full" />
                <div class="p-5">
                  <p class="text-medium mb-5 text-gray-700"><%= plan.name %></p>
                  <%= link_to plan_path(plan.id) do %>
                    <button class="w-full rounded-md bg-indigo-600  py-2 text-indigo-100 hover:bg-indigo-500 hover:shadow-md duration-75">詳細資訊</button>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <button data-action="click->moving#nextSlide" class="absolute top-1/2 transform -translate-y-1/2 right-0 rounded-full bg-gray-200 w-6 h-6">
            <span>></span>
          </button>
        </div>
      </section>
    </main>
