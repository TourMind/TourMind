<div class="mx-auto w-full bg-slate-200">
  <div class="mx-auto">
    <Section class = "p-3">
      <%= render "heading", restaurant:@restaurant%>
    </Section>

    <section class = "justify-center flex px-4 grid grid-cols-3 gap-4">
      <div class = "col-span-2 aspect-[5/3]">
        <img class="w-full" src=<%=@restaurant.image%> alt="site iamge">
      </div>
      <%= render "location", restaurant:@restaurant%>
    </section>

    <section class="min-w-full grid grid-cols-3 gap-4 flex my-5 px-4">
      
      <div class="border p-4 bg-white col-span-2">
        <%= render "description", restaurant:@restaurant%>
      </div>

      <div class="border p-4 bg-white col-span-1">
        <div>
          <%= render "reviews"%>
      </div>
    </section>
 
    <div data-controller="comment" data-turbo-frame="comment-comment">
      <button data-action="click->comment#toggleCommentForm" class="mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium">
      發表評論
      </button>
      <div class="hidden" data-comment-target="form">
      <%= render "comments/comment", comment: Comment.new, restaurant: @restaurant %>
      </div>
    </div>
    <%= link_to '編輯餐廳資訊', edit_restaurant_path(@restaurant), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to '返回餐廳列表', restaurants_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
   
  </div>
</div>

<h1><%= @restaurant.name %></h1>


  <%= render "comments/comment", restaurant: @restaurant %>




