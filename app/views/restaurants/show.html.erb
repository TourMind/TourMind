<div class="container mx-auto">
  <div class="mx-auto">
    <Section class = "p-3 relative">
      <%= render "heading", restaurant:@restaurant%>
    </Section>
    <section class = "justify-center flex px-4 grid grid-cols-5 gap-2 overflow-hidden py-4 shadow-lg rounded-lg" >
      <% if @restaurant.images.present? %>
        <div class = "col-span-5 lg:col-span-3 relative h-96">
          <%= image_tag @restaurant.images[0].url, {class: "w-full h-full object-fill"}%>
        </div>
        <div class = "col-span-5 lg:col-span-2 flex flex-col gap-2 h-96">
          <div class="h-1/2 w-full overflow-hidden">
            <%= image_tag @restaurant.images[1].url, {class: "object-fit w-full h-full"} if @restaurant.images[1].present?%>
          </div>
          <div class="h-1/2 w-full overflow-hidden">
            <%= image_tag @restaurant.images[2].url, {class: "object-fit w-full h-full"} if @restaurant.images[2].present?%>
          </div>
        </div>
      <% else %>
        <div class = "col-span-5 relative h-96">
          <%= image_tag "https://fakeimg.pl/300x200?text=TourMind", {class: "h-full w-full object-fill"}%>
        </div>
      <% end %>
    </section>
    <section class="min-w-full grid grid-cols-5 gap-2 flex my-5">
      <div class="p-8 bg-white col-span-5 lg:col-span-3 shadow-lg rounded-lg">
        <%= render "description", restaurant:@restaurant%>
      </div>
      <div class="p-8 bg-white col-span-5 lg:col-span-2 shadow-lg rounded-lg">
        <%= render "location", restaurant:@restaurant%>
      </div>
      <div class="p-4 bg-white col-span-5">
        <h2 class="font-bold text-2xl py-3">評等和評論</h2>
        <div class="overflow-y-auto h-40 ">
          <div id="comment-list">
            <%= render partial: "comment", collection: @restaurant.comments %>
          </div>
        </div>
      </div>
    </section>
    <div data-controller="butt">
      <div class="m-2">
        <a data-action="click->butt#toggleCommentForm" class="bg-gray-400 inline-block text-white focus:outline-none focus:ring-4 rounded-full text-md px-3 py-1 hover:bg-white hover:text-gray-400 border-2 transition-all duration-400" href="#comment-form">
          發表評論
        </a>
        <%= link_to '編輯餐廳資訊' , edit_restaurant_path(@restaurant), class:"bg-blue-400 inline-block text-white focus:outline-none focus:ring-4 rounded-full text-md px-3 py-1 hover:bg-white hover:text-blue-500 border-2 transition-all duration-400"%>
        <%= link_to '返回餐廳列表' , restaurants_path, class:"bg-blue-400 inline-block text-white focus:outline-none focus:ring-4 rounded-full text-md px-3 py-1 hover:bg-white hover:text-blue-500 border-2 transition-all duration-400" %>
        <%= link_to '刪除餐廳資訊' , restaurant_path(@restaurant), method: :delete,
           class:"bg-red-500 inline-block text-white focus:outline-none focus:ring-4 rounded-full text-md px-3 py-1 hover:bg-white hover:text-red-500 border-2 transition-all duration-400"  , data: { confirm: '您確定要刪除餐廳嗎？' } %>
        <div class="hidden p-4" data-butt-target="form" >
          <%= render "comments/comment", comment: Comment.new, restaurant:@restaurant %>
        </div>
        <div class="hidden p-4" data-butt-target="form" >
          <%= render "comments/comment", comment: Comment.new, restaurant: @restaurant %>
        </div>
      </div>
    </div>
  </div>
