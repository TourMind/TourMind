<div class="container mx-auto">
  <div class="mx-auto">
    <Section class = "p-3 relative">
      <%= render "heading", restaurant:@restaurant%>
    </Section>
    <section class = "justify-center flex px-4 grid grid-cols-5 gap-2 overflow-hidden py-4 shadow-lg rounded-lg" >
      <% if @restaurant.images.present? %>
        <div class = "col-span-5 lg:col-span-3 relative h-96">
          <%= image_tag @restaurant.images[0].url, {class: "w-full h-full object-fill"}%>
        </div>
        <div class = "col-span-5 lg:col-span-2 flex flex-col gap-2 h-96">
          <div class="h-1/2 w-full overflow-hidden">
            <%= image_tag @restaurant.images[1].url, {class: "object-fit w-full h-full"} if @restaurant.images[1].present?%>
          </div>
          <div class="h-1/2 w-full overflow-hidden">
            <%= image_tag @restaurant.images[2].url, {class: "object-fit w-full h-full"} if @restaurant.images[2].present?%>
          </div>
        </div>
      <% else %>
        <div class = "col-span-5 relative h-96">
          <%= image_tag "https://fakeimg.pl/300x200?text=TourMind", {class: "h-full w-full object-fill"}%>
        </div>
      <% end %>
    </section>
    <section class="min-w-full grid grid-cols-5 gap-2 flex my-5">
      <div class="p-8 bg-white col-span-5 lg:col-span-3 shadow-lg rounded-lg">
        <%= render "description", restaurant:@restaurant%>
      </div>
      <div class="p-8 bg-white col-span-5 lg:col-span-2 shadow-lg rounded-lg">
        <%= render "location", restaurant:@restaurant%>
      </div>
    </section>
  </div>
</div>
      
  <div class="container pb-4 m-auto">
    <div class="bg-white full lg:w-3/5 ">
      <div class='pb-4 border-b-2 border-gray-300'>
        <h2 id="comment-heading" class="text-2xl font-bold p-4">評等和評論</h2>
        <div class="">
          <div id="comment-list">
            <%= render partial: "comment", collection: @paginated_comments %>
          </div>
        </div>
        <%= render "pagy" %>
      </div>
    </div>
  </div>
  <section class='container py-4 m-auto'>
  <div data-controller="butt" class="bg-white full lg:w-3/5">
    <a data-action="click->butt#toggleCommentForm" class="inline-block px-5 py-3 mt-2 font-medium bg-gray-100 rounded-lg" href="#comment-form">
      發表評論
    </a>
    <div class="hidden" data-butt-target="form" >
      <%= render "comments/comment", comment: Comment.new, site:@site %>
    </div>
  </section>
  
