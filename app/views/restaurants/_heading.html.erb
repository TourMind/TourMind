<div class = "flex justify-between item" data-controller="favorite" id="show" data-type="Restaurant" data-id="<%= restaurant.id %>">
  <h1 class="font-bold text-3xl lg:text-4xl"><%=restaurant.name%></h1>
  <div class="button">
    <%= render "favoritebtn", object:@restaurant, size:'text-lg'%>
  </div>
</div>
<div class="flex items-center">
  <span class="mr-2"><%= star_rating(@restaurant_data[@restaurant.id][:average_rating]) %>
    <%= sprintf('%.1f', @restaurant_data[@restaurant.id][:average_rating]) %></span>
  <span class="mr-2">(<%= @restaurant_data[@restaurant.id][:comment_count] %>則評論)</span>
  <span class="inline-block rounded-full px-3 py-1 text-md font-semibold text-gray-700 "><%= restaurant.restaurant_type%></span>
</div>
