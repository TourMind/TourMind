<h2 class="font-bold text-2xl py-3">詳細資料</h2>
<span class="text-md"><%=@restaurant.intro%></span>
<div>
  <h3 class="text-lg bold mt-3 mb-1 font-bold">價位</h3>
  <span>$<%=@restaurant.price.to_i%></span>
</div>
<% if restaurant.cuisine_types.present?%>
  <div>
  <h3 class="text-lg mt-3 mb-1 font-bold">菜系</h3>
    <% @restaurant.cuisine_types.each do |cuisine_type| %>
      <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2 "><%=cuisine_type%></span>
    <% end %>
  </div>
<% end %>
<% if restaurant.atmostphere.present?%>
  <div>
    <h3 class="text-lg mt-3 mb-1 font-bold"> 氣氛</h3>
    <% restaurant.atmostphere.each do |atmostphere| %>
      <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2 "><%=atmostphere%></span>
    <% end %>
  </div>
<% end %>