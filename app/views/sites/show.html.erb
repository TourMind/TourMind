<div class="container m-auto pb-4">
  <h1 class='flex p-4 text-2xl font-bold'>
    <%= @site.name %>
  </h1>
  <div class="flex flex-wrap">
    <div class="flex p-4 items-center">
      <% if @comments_score.present? %>
        <h2 class="font-bold">評分：<%= star_rating(@average_rating) %><%= sprintf('%.1f', @average_rating) %>
                                   <%= @comment_count == 0 ? '0則評論' : "#{@comment_count}則評論" %></span>
      <% else %>
        <p>尚未有評論</p>
      <% end %>
      <%= render "favoritebtn", object:@site, size:'text-lg'%>
    </div>
  </div>
  <section class='flex justify-center pb-4 border-b-2 border-gray-300 md:w-90%'>
    <div class='grid grid-cols-3 grid-rows-2 gap-1 w-full max-h-96 shadow-md mr-4 rounded-md overflow-hidden relative'>
      <% if @site.images.present? %>
        <% @site.images.each_with_index do |image, index| %>
          <% if index == 0 %>
            <div class="col-span-2 row-span-2">
              <%= image_tag image.url, {class: "w-full h-full object-cover"}%>
            </div>
          <% elsif index < 3 %>
            <%# 先暫時移除第2張圖片起,裁切不同圖片大小設定 %>
            <div>
              <%= image_tag image.url, {class: "w-full h-full object-cover"}%>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <%= image_tag src="https://fakeimg.pl/350x200/?text=TourMind", class:'object-cover col-span-full row-span-full w-full h-full' %>
      <% end %>
    </div>
  </section>
  <div class='flex py-4 flex-col lg:flex-row'>
    <div class="w-full lg:w-2/3 mr-4">
      <div class='pb-4 px-4 border-b-2 border-gray-300'>
        <div class='text-2xl font-bold pb-2'>詳細資料</div>
        <ul>
          <li>
            <span class='font-bold'>停留時間：</span><%=@site.stay_duration%>
          </li>
          <li class="flex">
            <span class='font-bold whitespace-nowrap'>簡介：</span>
            <span><%=@site.intro%></span>
          </li>
        </ul>
      </div>
      <div class='p-4 border-b-2 border-gray-300'>
        <div class='text-2xl font-bold pb-2'>位置和聯絡方式</div>
        <ul>
          <li>
            <span class='font-bold'>地址：</span><%=@site.address%>
          </li>
          <li>
            <span class='font-bold'>電話：</span><%=@site.tel%>
          </li>
          <li>
            <%= link_to '網站連結(請點我)' , @site.website, target: "_blank", class:' font-bold' %>
          </li>
        </ul>
      </div>
      <div class='p-4'>
        <div class="text-2xl font-bold pb-2">景點類型</div>
        <ul class='flex flex-wrap'>
          <% @site.site_types.each do |site_type| %>
            <li class='inline-block py-1 px-2 mr-2 text-sm font-semibold text-gray-700 bg-gray-200 rounded-full'>
              <%=site_type%>
            </li>
          <% end %>
        </ul>
      </div>
      <div class='p-4'>
        <%= link_to '編輯景點資訊' , edit_site_path(@site), class:'rounded-md py-2 px-5 bg-blue-300 inline-block font-medium'%>
        <%= link_to '返回景點列表' , sites_path, class:'rounded-md py-2 px-5 bg-blue-300 inline-block font-medium' %>
        <%= link_to '刪除景點資訊' , site_path(@site), method: :delete,
          class: 'rounded-md py-2 px-5 bg-gray-200 inline-block font-medium' , data: { confirm: '您確定要刪除景點嗎？' } %>
      </div>
    </div>
    <div class="flex justify-center w-full lg:w-1/3">
      <iframe
        width="400" height="400" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?key=YOUR_API_KEY&q=<%= "#{@site.name} #{@site.address}" %>" allowfullscreen>
      </iframe>
    </div>
  </div>
  <section class="min-w-full my-5 px-4">
    <div class="overflow-y-auto h-20 ">
      <div id="comment-list">
        <%= render partial: "comment", collection: @site.comments %>
      </div>
    </div>
  </section>
  <div data-controller="butt">
    <a data-action="click->butt#toggleCommentForm" class="mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" href="#comment-form">
      發表評論
    </a>
    <div class="hidden" data-butt-target="form" >
      <%= render "comments/comment", comment: Comment.new, site:@site %>
    </div>
  </div>
