<section>
  <div class="flex m-2 space-x-2 p-10">
    <div class="w-1/3 ">
      <div class="bg-white rounded-md shadow-md bg-blue-100 p-2">
        <h2 class="text-xl  font-semibold mb-2"><%= link_to '住宿', '#' %>
        </h2>
      </div>
    </div>
    <div class="w-1/3">
      <div class="bg-white rounded-md shadow-md bg-blue-100 p-2">
        <h2 class="text-xl font-semibold mb-2"><%= link_to '景點', '#' %>
        </h2>
      </div>
    </div>
    <div class="w-1/3">
      <div class="bg-white rounded-md shadow-md bg-blue-100 p-2">
        <h2 class="text-xl font-semibold mb-2">餐廳</h2>
      </div>
    </div>
  </div>
</section>
<div data-controller="site">
  <div class="w-full flex justify-around lg:hidden">
    <div class="border flex-grow text-center py-2 font-medium text-sm cursor-pointer"
      data-action="click->site#toggleFilterMenu">篩選</div>
  </div>
  <section class="container m-auto flex py-5 min-h-[calc(100vh_-_100px)]">
    <section data-site-target="filterMenu"
      class="hidden lg:block absolute left-0 top-0 lg:static lg:w-72 w-full h-max bg-white px-6 mr-3 bd shadow-lg rounded-md"
      style="z-index: 1">
      <div class="lg:hidden flex justify-end pt-6">
        <button data-action="click->site#toggleFilterMenu"><i class="text-lg fa-solid fa-xmark"></i></button>
      </div>
      <%= form_tag(sites_path, {method: :get,class:'border-b py-6'}) do |form| %>
        <div class="border-b py-6">
          <div class="py-2 cursor-pointer" data-action="click->site#toggleFilterCategory">
            地區搜尋<i class="px-1 fa-solid fa-chevron-down"></i>
          </div>
          <ul class="flex flex-col overflow-hidden max-h-0 max-h-96 px-2">
            <% @city_options.each do | city |%>
              <li class="py-1">
                <%= check_box_tag "address[]", city, @address.include?(city) , {class: "mr-2", data:{site_target:"filterCheckbox"}} %>
                <%=city%>
              </li>
            <% end %>
          </ul>
        </div>
        <div class="border-b py-6">
          <div class="py-2 cursor-pointer" data-action="click->site#toggleFilterCategory">
            景點類型<i class="px-1 fa-solid fa-chevron-down"></i>
          </div>
          <ul class="flex flex-col overflow-hidden max-h-0 max-h-96 px-2">
            <% @site_type_options.each do | site_type |%>
              <li class="py-1">
                <%= check_box_tag "site_types[]", site_type, @site_types.include?(site_type) , {class: "mr-2", data:{site_target:"filterCheckbox"}} %>
                <%=site_type%>
              </li>
            <% end %>
          </ul>
        </div>
        <div class="py-6">
          <div class="py-2 cursor-pointer" data-action="click->site#toggleFilterCategory">
            寵物友善搜尋<i class="px-1 fa-solid fa-chevron-down"></i>
          </div>
          <ul class="flex flex-col overflow-hidden max-h-0 max-h-96 px-2">
            <% @pet_friendly_options.each do | pet_friendly |%>
              <li class="py-1">
                <%= check_box_tag "pet_friendly[]", pet_friendly, @pet_friendly.include?(pet_friendly) , {class: "mr-2", data:{site_target:"filterCheckbox"}} %>
                <%=pet_friendly%>
              </li>
            <% end %>
          </ul>
        </div>
        <%= submit_tag "submit", {class:'hidden', data:{site_target:"filterSubmitBtn"}} %>
      <% end %>
    </section>
    <section class="flex-grow w-3/5">
      <div class='flex justify-between'>
        <h1 class='text-center text-4xl font-bold'>景點</h1>
        <%= link_to '新增景點' , new_site_path(@site), class:'rounded-lg py-3 px-3 bg-blue-500 inline-block text-white
          font-medium'%>
      </div>
      <div class="flex justify-between">
        <div class="py-2">
          <% if @sites.present? %>
            <%= @sites.total_count %> 個景點
          <% end %>
        </div>
        <form class="max-h-10 flex justify-center py-1">
          <div class="border-2 rounded-full flex items-center  border-gray-700 bg-gray-100">
            <input type="text" name="keyword" value="<%= params[:keyword]%>" placeholder="請輸入名稱/地址/類型..."
              class="mx-1 border-0 bg-transparent focus:ring-transparent h-1">
            <button type="submit" class="btn-add"><i class="fas fa-search w-3 mr-2"></i></button>
          </div>
        </form>
      </div>
      <section class="grid grid-cols-1 md:grid-cols-3 gap-2">
        <% @sites.each do |site| %>
          <div class="bg-white rounded-md overflow-hidden shadow-lg">
            <%= link_to site_path(site.id) do %>
              <div class="relative">
                <div class=" text-gray-700 md:h-[10rem] w-full">
                  <% if site.images.present? %>
                    <img class="object-cover w-full h-full" src="<%= site.images.first.url %>" alt="Site Pic">
                  <% elsif site.image.url.present? %>
                    <img class="object-cover w-full h-full" src="<%= site.image.url %>" alt="Site Pic">
                  <% else %>
                    <%= image_tag "https://fakeimg.pl/350x200/?text=TourMind" , class:'object-cover w-full h-full' %>
                  <% end %>
                  <div class="absolute top-0 right-0 m-3">
                    <i class="fa-solid fa-heart text-red-600 fa-lg"></i>
                  </div>
                </div>
              </div>
            <% end %>
            <div class="flex-grow p-2 m-2">
              <h2 class="text-xl font-medium py-4">
                <%= site.name %>
              </h2>
              <ul>
                <li>評分:<%= 4.5 %>
                </li>
                <i class="fa-solid fa-star text-yellow-300 fa-lg"></i>
                <i class="fa-solid fa-star text-yellow-300 fa-lg"></i>
                <i class="fa-solid fa-star text-yellow-300 fa-lg"></i>
                <i class="fa-solid fa-star text-yellow-300 fa-lg"></i>
                <i class="fa-solid fa-star-half text-yellow-300 fa-lg"></i>
                <li>地址:<%= site.address %>
                </li>
                <li>電話:
                  <%= site.tel %>
                </li>
                <li>簡介:<%= site.intro&.truncate(30)%>
                </li>
              </ul>
              <div class=" mt-2">
                <h2 class="font-medium">景點類型</h2>
                <% if site.site_types.present? %>
                  <ul class="flex flex-wrap mt-2">
                    <% site.site_types.each do |site_type| %>
                      <li
                            class='inline-block px-3 py-1 mb-2 mr-1 text-sm font-semibold text-gray-700 bg-gray-200 rounded-full'>
                        <%= site_type %>
                      </li>
                    <% end %>
                  </ul>
                <% else %>
                  <p>沒有類型資料</p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </section>
    </section>
  </section>
  <div>
    <%= paginate @sites%>
  </div>
</div>
