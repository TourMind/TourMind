        </div>
      <% end %>
      <%= link_to restaurants_path, class: "inline-block w-1/4 mr-2" do %>
        <div class="text-black transition-all duration-100 ease-in-out border-b-4 rounded-lg shadow-md home-title bg-with border-b-gray-400 hover:border-b-0">
          <h2 class="text-xl font-semibold">餐廳</h2>
        </div>
      <% end %>
      <%= link_to plans_path , class: "inline-block w-1/4" do %>
      <div class="text-black transition-all duration-100 ease-in-out border-b-4 rounded-lg shadow-md home-title bg-with border-b-gray-400 hover:border-b-0">
