<div class="container m-auto pb-4">
  <h1 class='flex p-4 text-2xl font-bold'>
    <%= @hotel.name %>
  </h1>
  <div class="flex flex-wrap">
    <ul class="flex-col p-4">
      <li>評分:<%= 4.5 %>
      </li>
      <i class="fa-solid fa-star text-yellow-300 fa-lg"></i>
      <i class="fa-solid fa-star text-yellow-300 fa-lg"></i>
      <i class="fa-solid fa-star text-yellow-300 fa-lg"></i>
      <i class="fa-solid fa-star text-yellow-300 fa-lg"></i>
      <i class="fa-solid fa-star-half text-yellow-300 fa-lg"></i>
      <button class="px-2 py-1 text-white bg-gray-700 rounded-full">加入喜愛清單</button>
    </ul>
  </div>
  <section class='flex justify-center pb-4 border-b-2 border-gray-300 md:w-90%'>
    <div class='grid grid-cols-3 grid-rows-2 gap-1 w-full shadow-md mr-4 rounded-md overflow-hidden relative'>
      <% if @hotel.images.present? %>
        <% @hotel.images.each_with_index do |image, index| %>
          <% if index == 0 %>
            <div class="col-span-2 row-span-2">
              <%= image_tag image.url, {class: "w-full h-full object-fill"}%>
            </div>
          <% elsif index < 3 %>
            <%# 先暫時移除第2張圖片起,裁切不同圖片大小設定 %>
            <div>
              <%= image_tag image.url, {class: "w-full h-full object-fill"}%>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <%= image_tag src="https://fakeimg.pl/350x200/?text=TourMind", class:'object-cover col-span-full row-span-full w-full' %>
      <% end %>
    </div>
  </section>
  <div class='flex py-4 flex-col lg:flex-row'>
    <div class="w-full lg:w-2/3 mr-4">
      <div class='pb-4 px-4 border-b-2 border-gray-300'>
        <div class='text-2xl font-bold pb-2'>詳細資料</div>
        <ul>
          <li>
            <span class='font-bold'>星級：</span><%=@hotel.star_rating%>
          </li>
          <li>
            <span class='font-bold'>類型：</span><%=@hotel.hotel_types%>
          </li>
          <li class="flex">
            <span class='font-bold whitespace-nowrap'>簡介：</span>
            <span><%=@hotel.intro%></span>
          </li>
        </ul>
      </div>
      <div class='p-4 border-b-2 border-gray-300'>
        <div class='text-2xl font-bold pb-2'>位置和聯絡方式</div>
        <ul>
          <li>
            <span class='font-bold'>地址：</span><%=@hotel.address%>
          </li>
          <li>
            <span class='font-bold'>電話：</span><%=@hotel.tel%>
          </li>
          <li>
            <%= link_to '網站連結(請點我)' , @hotel.website, target: "_blank", class:'font-bold' %>
          </li>
        </ul>
      </div>
      <div class='p-4'>
        <div class="text-2xl font-bold pb-2">飯店設備</div>
        <ul class='flex flex-wrap'>
          <% @hotel.equipment.each do |equipment| %>
            <li class='inline-block py-1 px-2 mr-2 text-sm font-semibold text-gray-700 bg-gray-200 rounded-full'>
              <%=equipment%>
            </li>
          <% end %>
        </ul>
      </div>
      <div class='p-4'>
        <%= link_to '編輯飯店資訊' , edit_hotel_path(@hotel), class:'rounded-md py-2 px-5 bg-blue-300 inline-block font-medium'%>
        <%= link_to '返回飯店列表' , hotels_path, class:'rounded-md py-2 px-5 bg-blue-300 inline-block font-medium' %>
        <%= link_to '刪除飯店資訊' , hotel_path(@hotel), method: :delete,
          class: 'rounded-md py-2 px-5 bg-gray-200 inline-block font-medium' , data: { confirm: '您確定要刪除這家飯店嗎？' } %>
      </div>
    </div>
    <div class="flex justify-center w-full lg:w-1/3">
      <iframe
        width="400" height="400" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?key=YOUR_API_KEY&q=<%= "#{@hotel.name} #{@hotel.address}" %>" allowfullscreen>
      </iframe>
    </div>
  </div>
  <section class='w-full'>
    <div class='p-4 bg-white border'>
      <div>
        <h2 class='py-3 text-2xl font-bold'>評論</h2>
        <hr class='h-px my-8 bg-gray-200'>
      </div>
      <div>
        <h3 class='text-lg '>評論</h3>
        <div class='flex justify-between'>
          <h4 class='text-base '>XX</h4>
          <span>OOOOO</span>
        </div>
        <div class='flex justify-between'>
          <h4 class='text-base '>XX</h4>
          <span>OOOOO</span>
        </div>
      </div>
    </div>
  </section>
</div>
